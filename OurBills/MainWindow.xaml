<Window x:Class="DoTheBills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=" DoTheBillS" BorderThickness="0" WindowStyle="None" Height="300" Width="400" AllowsTransparency="True" Background="Green">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="44"/>
            <RowDefinition Height="121"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <Button Height="22" Width="22" HorizontalAlignment="Right" Style="{StaticResource CapaBotaoFechar}" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown" Content="X"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Style="{StaticResource CapaTitulo}">DoTheBillS</TextBlock>
        <Image Source="../Imagens/grana.png" Grid.Row="2"/>
        <!--<TextBlock Grid.Row="2" HorizontalAlignment="Center" Style="{StaticResource CapaConstrucao}">Em construção</TextBlock>-->
        <TextBlock Grid.Row="4" HorizontalAlignment="Center" Style="{StaticResource CapaCarregando}">carregando...</TextBlock>
    </Grid>
</Window>
