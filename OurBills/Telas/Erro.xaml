<Window x:Class="DoTheBills.Telas.Erro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="300" WindowStyle="None" BorderThickness="0.5" BorderBrush="Black" Background="Transparent" AllowsTransparency="True" Activated="Window_Activated" Deactivated="Window_Deactivated"
        WindowStartupLocation="CenterScreen">
    <Grid >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Image Source="../Imagens/Erro.png" Width="40" VerticalAlignment="Top"/>
            <TextBlock Name="tbTexto" FontSize="16" FontWeight="Bold" FontFamily="Arial" Foreground="Black" Margin="20,15,0,0" VerticalAlignment="Top" Width="150" TextWrapping="WrapWithOverflow"/>
            <StackPanel Orientation="Horizontal" PreviewMouseLeftButtonDown="StackPanel_PreviewMouseLeftButtonDown" Margin="0,50,0,0">
                <Image Source="../Imagens/close40.png" VerticalAlignment="Bottom" Width="20" Margin="0,0,5,0"/>
                <TextBlock Text="fechar" FontSize="14" FontWeight="Bold" FontFamily="Arial" Foreground="Black" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
