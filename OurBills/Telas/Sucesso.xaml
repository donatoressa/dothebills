<Window x:Class="DoTheBills.Telas.Sucesso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="450" WindowStyle="None" BorderThickness="0.5" BorderBrush="Black" Background="Transparent" AllowsTransparency="True" Activated="Window_Activated" Deactivated="Window_Deactivated"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Image Source="../Imagens/Sucesso.png" Width="40" VerticalAlignment="Top"/>
            <TextBlock Name="tbTexto" FontSize="14" FontWeight="Bold" FontFamily="Arial" Foreground="Black" Margin="10,15,0,0" VerticalAlignment="Top" Width="300" TextWrapping="WrapWithOverflow"/>
            <StackPanel Orientation="Horizontal" PreviewMouseLeftButtonDown="StackPanel_PreviewMouseLeftButtonDown">
                <Image Source="../Imagens/close40.png" VerticalAlignment="Bottom" Width="20" Margin="0,0,5,10"/>
                <TextBlock Text="fechar" FontSize="14" FontWeight="Bold" FontFamily="Arial" Foreground="Black" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
